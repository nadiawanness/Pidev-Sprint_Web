                            </div>
                        </div><!-- end row -->

                        <hr class="invis">

                        <div class="row">

                            <div class="col-md-6 col-sm-12">
                                <label class="control-label">Job Type <small>Fulltime, Freelancer etc. (optional)</small></label>
                                 {{ form_widget(form.jobType,{'attr':{'class':'form-control'}} ) }}
                            </div>
                        </div><!-- end row -->

                        <hr class="invis">

                        <div class="row">
                            <div class="col-md-6 col-sm-12">
                                <label class="control-label">Job Salary <small>Select your max salary</small></label>
                                {{ form_widget(form.jobSalary,{'attr':{'class':'form-control'}}) }}

                            </div>
                            <div class="col-md-6 col-sm-12">
                                <label class="control-label">Job Time <small>Select your max time. (optional)</small></label>
                                {{ form_widget(form.jobTime,{'attr':{'class':'form-control'}}) }}

                            </div>
                        </div><!-- end row -->

                        <hr class="invis">



                        <div class="row">
                            <div class="col-md-12 col-sm-12">
                                <label class="control-label">logo <small>Enter a short title for your project</small></label>
                                {{ form_widget(form.logo,{'attr':{'class':'form-control'}}) }}


                            </div>
                        </div><!-- end row -->


                        <hr class="invis">

                        {{ form_widget(form) }}
                        <hr>
                        <button class="btn btn-primary btn-block">{{ button_label|default('Submit Form') }}</button>
                        {{ form_end(form) }}
