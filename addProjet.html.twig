                <div class="post-padding">

                    <div class="job-title hidden-sm hidden-xs"><h5>Job Details</h5></div>
                    <form id="submit" class="submit-form">
                        <hr class="invis">



                        <hr class="invis">

                        <div class="row">

                        </div><!-- end row -->

                        <hr class="invis">

                        <div class="row">
                            <div class="col-md-12 col-sm-12">
                                <label class="control-label">Company Logo <small>Please add a your company logo. (800x800)</small></label>
                                <div class="fileupload fileupload-new" data-provides="fileupload">
                                    <div class="fileupload-preview thumbnail"></div>
                                    <br>
                                    <span class="btn btn-default btn-file">
                                                    <span class="fileupload-new">Select Logo</span>
                                                    <span class="fileupload-exists">Change</span>

                                                    <input type="file">
                                                </span>
                                    <a href="#" class="btn btn-default fileupload-exists" data-dismiss="fileupload"><i class="fa fa-close"></i></a>
                                </div>
                            </div>
                        </div><!-- end row -->
                        {{ form_start(form,{'attr':{'novalidate':'novalidate'}}) }}

                        <hr class="invis">


                        <div class="row">
                            <div class="col-md-12 col-sm-12">
                                <label class="control-label">Project Title <small>Enter a short title for your project</small></label>
                               {{ form_widget(form.nomProjet,{'attr':{'class':'form-control'}}) }}

                            </div>
                        </div><!-- end row -->

                        <hr class="invis">

                        <div class="row">
                            <div class="col-md-12 col-sm-12">
                                <label class="control-label">Project Description <small>Enter long description for your project</small></label>
