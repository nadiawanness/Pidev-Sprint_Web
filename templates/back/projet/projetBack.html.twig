                                <table class="table">
                                    <thead class=" text-primary">
                                    <th>
                                        Name
                                    </th>
                                    <th>
                                        Country
                                    </th>
                                    <th>
                                        Email
                                    </th>
                                    <th>
                                        Salary
                                    </th>
                                    </thead>
                                    <tbody>
                                    <tr>
                                        <td>
                                            {{  projet.nomProjet}}
                                        </td>
                                        <td>
                                            {{ projet.jobTime }}
                                        </td>
                                        <td>
                                            {{ projet.user.mail }}
                                        </td>
                                        <td>
                                            {{ projet.jobSalary }}
                                        </td>
                                        <td class="text-primary">

                                        </td>
                                        <td>
