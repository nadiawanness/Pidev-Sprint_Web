            </tr>
        </tbody>
    </table>

    <a class="btn btn-secondary" href="{{ path('recruteur_index') }}">back to list</a>

    <a class="btn btn-secondary" href="{{ path('recruteur_edit', {'id': recruteur.id}) }}">edit</a>

