{% block title %}Recruteur{% endblock %}

{% block body %}
    <h1>Recruteur</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ recruteur.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ recruteur.nom }}</td>
            </tr>
            <tr>
                <th>Prenom</th>
                <td>{{ recruteur.prenom }}</td>
            </tr>
            <tr>
                <th>Nom de la societé</th>
                <td>{{ recruteur.nomso }}</td>
            </tr>
            <tr>
                <th>E-Mail</th>
                <td>{{ recruteur.mail }}</td>
            </tr>
            <tr>
                <th>Numéro de la société</th>
                <td>{{ recruteur.numso }}</td>
            </tr>
            <tr>
